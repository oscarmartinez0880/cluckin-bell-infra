# Example Terraform variables for Cluckin Bell Infrastructure
# Copy this to terraform.tfvars and customize for your environment

# Core configuration
environment  = "dev"
project_name = "cluckin-bell"

# AWS region for CI runners
aws_region = "us-east-1"

# Enable CI runners for Sitecore Windows container builds
enable_ci_runners = true

# GitHub App configuration for CI runners
# Create a GitHub App with Actions:Read, Administration:Read, Metadata:Read permissions
# and install it on your organization/repositories
ci_runners_github_app_id                        = "123456"  # Your GitHub App ID
ci_runners_github_app_installation_id           = "789012"  # Your GitHub App Installation ID
ci_runners_github_app_private_key_ssm_parameter = "/github/app/private-key"

# GitHub repositories allowed to use the runners
ci_runners_github_repository_allowlist = [
  "oscarmartinez0880/cluckin-bell-app"
  # Add additional repositories as needed
]

# CI runners instance configuration
ci_runners_instance_type = "m5.2xlarge"  # Default for Sitecore builds
ci_runners_max_size      = 5             # Maximum number of concurrent runners

# Common tags applied to all resources
common_tags = {
  Project     = "cluckin-bell"
  ManagedBy   = "terraform"
  Owner       = "DevOps Team"
  Environment = "dev"
}